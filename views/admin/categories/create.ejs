<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg padding-y">
    <div class="container">
        <div class="row">
            <main class="col-sm-12">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2">Nova categoria</h4>
                    </header>
                    <article class="card-body">
                        <form method="POST">
                            <div class="form-group">
                                <label>Categoria</label>
                                <input name="category" type="text" class="form-control" placeholder="">
                            </div>
                            <div class="form-group">
                                <label>Descrição</label>
                                <textarea name="descripton" class="form-control" placeholder=""></textarea>
                            </div> <!-- form-group end.// -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Salvar categoria </button>
                            </div> <!-- form-group// -->
                        </form>
                    </article> <!-- card-body end .// -->
                </div> <!-- card.// -->
            </main> <!-- col.// -->
        </div>
    </div> <!-- container .//  -->
